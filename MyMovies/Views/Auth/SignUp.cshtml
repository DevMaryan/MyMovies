
@{
    ViewBag.Title = "Sign Up View";
}


@if (User.Identity.IsAuthenticated)
{
    <p class="already_logged_in">You are already logged in @User.FindFirst("Username").Value</p>
}
else
{
<div id="container_sign_in">
    <p class="p-sign-in">Sign Up for free!</p>
    <form  method="POST" id="sign_in_form">
        <input type="text"  class="form-control-signin" placeholder="username" required />
        <input type="password"  class="form-control-signin" placeholder="password" required />
        <input type="password"  class="form-control-signin" placeholder="password" required />
        <input type="text"  class="form-control-signin" placeholder="Address" required />
        <input type="email"  class="form-control-signin" placeholder="Email" required />
        <input type="submit" value="Sign Up" class="btn-sign-in" />
    </form>
</div>
}