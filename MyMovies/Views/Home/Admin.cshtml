@model List<MyMovies.Models.Movie>

@{
    ViewBag.Title = "Admin Panel";
}

@if (Model.Count() == 0)
{
    <p>No Data</p>
}
else
{
<div id="container">
    @if (ViewBag.ErrorMessage != null)
    {
        <div>@ViewBag.ErrorMessage</div>
    }
    @if (ViewBag.SuccessMessage != null)
    {
        <div>@ViewBag.SuccessMessage</div>
    }
    <table class="tbl" border="0" cellpadding="0" cellspacing="0">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Image</th>
                <th>Genre</th>
                <th>Date</th>
                <th>Read</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var movie in @Model)
            {
                <tr>
                    <td>@movie.Id</td>
                    <td>@movie.Title</td>
                    <td><img src="@movie.ImageUrl" style="width:45px;height:45px;border-radius:3px;object-fit:cover;" /></td>
                    <td>@movie.Genre</td>
                    <td>@movie.Date</td>
                    <th><a href="/Home/Detail/@movie.Id" class="read">Read</a></th>
                    <th><a href="/Home/Update/@movie.Id" class="update">Update</a></th>
                    <th><a href="/Home/Delete/@movie.Id" class="delete">Delete</a></th>

                </tr>
            }
        </tbody>
    </table>
</div>

}
