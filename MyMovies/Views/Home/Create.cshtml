@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@model MyMovies.ViewModels.MovieCreateModel;
@{
    ViewBag.Title = "Create Movie";
}
@if (User.Identity.IsAuthenticated)
{
    <div id="container4">
        <form asp-controller="Home" asp-action="Create" method='POST' class='form-control'>
            <label for='title' class="title-control">Movie Title</label>
            <input type="text" asp-for="Title" id="title" class='input-control' required>
            <label for='image' class="title-control">Movie Image URL</label>
            <input type="text" asp-for="ImageUrl" class='input-control' required>
            <label for='description' class="title-control">Movie Description</label>
            <textarea type="text" asp-for="Description" class='input-control' required></textarea>
            <label for='genre' class="title-control">Movie Genre</label>
            <select asp-for="Genre" class='input-control' required>
                <option value="SCI-FI">SCI-FI</option>
                <option value="Action">Action</option>
                <option value="Adventure">Adventure</option>
                <option value="Comedy">Comedy</option>
                <option value="Horror">Horror</option>
            </select>
            <br>
            <button type="submit" class="btn my">Create</button>
        </form>
    </div>
}
